<h3><%= JSON.stringify(dataSalary) %></h3>
<h3><%- locals.flash %></h3>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        Search & Filter
        <a href="">
          <span id="icon-reload" class="glyphicon glyphicon-refresh"></span>
        </a>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="status-list col-sm-6 pl0">
          </div>
          <div class="col-sm-6">
            <form action="" method="GET">
              <div class="input-group">
            </form>
            <input type="text" class="form-control" name="keyword" placeholder="Search for..." value="<%= keyword  %>">
            <input type="hidden" value="all">
            <span class="input-group-btn">
              <button class="btn btn-info" type="submit">Search</button>
            </span>
            <span class="input-group-btn">
              <button class="btn btn-success" type="button"><a href="">Clear</a></button>
            </span>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="col-lg-12">
  <div class="panel panel-info">
    <div class="panel-heading">
      List Salary
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
      <form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
        <div class="zcontrols">
          <select name="action" class="form-control slbAction">
            <option value="">Bulk Action</option>
            <option value="">
              Active
            </option>
            <option value="">
              InActive
            </option>
            <option value="">
              Change Ordering
            </option>
            <option value="">
              Delete
            </option>
          </select>
          <button class="btn btn-info btnAction" type="button" id="btn-action" value="btnAction" disabled>Apply</button>
          <div class="pull-right">
            <a href="<%= systemConfig.prefixAdmin %>/salary/add" class="btn btn-warning btn-addNew">Add New
            </a>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>
                  <input type="checkbox" class="cbAll" />
                </th>
                <th>#</th>
                <th>Wage</th>
                <th>Basic_salary</th>
                <th>Coefficient_salary</th>
                <th>allowance_salary</th>
              </tr>
            </thead>
            <tbody>
              <% dataSalary.forEach((salary,index)=>{%>
                <tr>
                  <td>
                    <input type="checkbox" name="cid" value="<%= salary.id %>" />
                  </td>
                  <td>
                    <%= index + 1 %>
                  </td>
                  <td>
                    <%= salary.wage %>
                  </td>
                  <td>
                    <%= salary.basic_salary %>
                  </td>
                  <td>
                    <%= salary.coefficient_salary %>
                  </td>
                  <td>
                    <%= salary.allowance_coefficient %>
                  </td>
                  <td>
                    <a href="<%= systemConfig.prefixAdmin %>/salary/edit/<%= salary.id %>" type="button" class="btn btn-warning btn-sm">Edit</a>
                    <a href="" type="button" class="btn btn-danger btn-sm btn-delete">Delete</a>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="col-lg-12">
  <% include ./../../helpers/pagi_sala/pagination %>
  <%- paginationHelper(pagination ,'salary', keyword) %>
</div>
</div>